<resources>    <!-- Base application theme. -->    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">        <!-- Customize your theme here. -->        <item name="colorPrimary">@color/colorPrimary</item>        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>        <item name="colorAccent">@color/colorAccent</item>    </style>    <style name="HeaderText">        <item name="android:textColor">@color/colorPrimary</item>        <item name="android:textSize">@dimen/headerText</item>        <item name="android:fontFamily">sans-serif</item>        <item name="android:layout_height">wrap_content</item>        <item name="android:layout_width">match_parent</item>        <item name="android:paddingTop">@dimen/textPaddingVertical</item>        <item name="android:paddingLeft">@dimen/textPaddingHorizontal</item>        <item name="android:paddingRight">@dimen/textPaddingHorizontal</item>    </style>    <style name="SmallText">        <item name="android:textColor">@color/colorText</item>        <item name="android:textSize">@dimen/smallText</item>        <item name="android:fontFamily">sans-serif-light</item>        <item name="android:layout_height">wrap_content</item>        <item name="android:layout_width">match_parent</item>        <item name="android:paddingTop">@dimen/textPaddingVertical</item>        <item name="android:paddingLeft">@dimen/textPaddingHorizontal</item>        <item name="android:paddingRight">@dimen/textPaddingHorizontal</item>        <item name="android:lineSpacingExtra">-1sp</item>    </style>    <style name="ButtonText">        <item name="android:layout_width">match_parent</item>        <item name="android:layout_height">match_parent</item>        <item name="android:textAlignment">center</item>        <item name="android:fontFamily">sans-serif-medium</item>        <item name="android:textAllCaps">true</item>        <item name="android:textSize">@dimen/buttonText</item>        <item name="android:textColor">@color/colorOnPrimary</item>        <item name="android:lineSpacingExtra">-4sp</item>        <item name="android:padding">@dimen/textPaddingVertical</item>    </style>    <style name="ButtonCardView">        <item name="android:layout_width">match_parent</item>        <item name="android:layout_height">wrap_content</item>        <item name="android:layout_marginRight">@dimen/textPaddingHorizontal</item>        <item name="android:layout_marginLeft">@dimen/textPaddingHorizontal</item>        <item name="android:clickable">true</item>        <item name="android:focusable">true</item>        <item name="android:foreground">@drawable/button_bg</item>    </style>    <style name="ReminderText">        <item name="android:layout_width">match_parent</item>        <item name="android:layout_height">wrap_content</item>        <item name="android:textColor">@color/colorText</item>        <item name="android:fontFamily">sans-serif-light</item>        <item name="android:alpha">0.45</item>        <item name="android:textSize">@dimen/reminderText</item>        <item name="android:lineSpacingExtra">0sp</item>        <item name="android:textAlignment">center</item>        <item name="android:paddingTop">@dimen/textPaddingVertical</item>        <item name="android:paddingBottom">@dimen/textPaddingVertical</item>    </style></resources>